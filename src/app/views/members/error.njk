{% extends "layout.njk" %}

{% block content %}

<div class='card table-container empty'>
    <div class="header">
        <a class='button' href='/members/create'>Novo Membro</a>
        <form action='/members' method='GET'>
            <input type='text' name='filter' value='{{filter}}' placeholder='Digite um nome'>
            <button type='submit'>Filtrar</button>
        </form>
    </div>
    <table width='100%'>
        <thead>
            <tr>
                <th>Membro</th>
                <th>Email</th>
                <th>Peso</th>
                <th>Altura</th>
                <th>Ação</th>
            </tr>
        </thead>
    </table>
    <span>Nenhum resultado encontrado.</span>
</div>

{% endblock content %}


